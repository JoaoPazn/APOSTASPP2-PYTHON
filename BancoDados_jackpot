create schema jackpot_if;
use jackpot_if;

create table usuario(
login integer,
primary key(login),
nome varchar(99),
data_nasc date not null,
cpf varchar(11) unique key,
gasto float,
ganho float,
saldoatual float
);

create table tigrinho(
gastotig float, -- Vai ser chave estrangeira
ganhotig float -- Vai ser chave estrangeira
);

create table roleta(
gastorol float, -- Vai ser chave estrangeira
ganhorol float -- Vai ser chave estrangeira
);

create table esporte(
gastoesp float, -- Vai ser chave estrangeira
ganhoesp float -- Vai ser chave estrangeira
);

create table gastogeral(
gastotig float, -- Vai receber chave estrangeira
gastorol float, -- Vai receber chave estrangeira
gastoesp float -- Vai receber chave estrangeira
);

create table ganhogeral(
ganhotig float, -- Vai receber chave estrangeira
ganhorol float, -- Vai receber chave estrangeira
ganhoesp float -- Vai receber chave estrangeira
);
